//- MIXIN :: START

include ./_mixin/_hamburger
include ./_mixin/_swiper
include ./_mixin/_modal

mixin submainSection(imgName, breadcrumbsArr, title, desc)
	section#submain.submain
		.submain__bg
			img(src="img/" + imgName + '.jpg' srcset="img/" + imgName + '@2x.jpg 2x' alt="")

		.c-grid
			.submain__wrapper
				.submain__wrapper-left

					.submain__breadcrumbs.wow.animate__animated.animate__fadeInUp
						each val, idx in breadcrumbsArr
							if(idx === breadcrumbsArr.length - 1)
								p!= val
							else
								a(href="#")!= val

					h1.submain__title.c-title.c-title--gold.wow.animate__animated.animate__fadeInUp!= title

					if(desc)
						p.submain__desc.c-desc.wow.animate__animated.animate__fadeInUp!= desc

				.submain__wrapper-right

//- MIXIN :: END
